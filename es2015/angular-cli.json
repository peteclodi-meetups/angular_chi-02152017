{
  "project": {
    "version": "1.0.0-beta.30",
    "name": "es2015"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "dist",
      "assets": [
        "assets",
        "favicon.ico"
      ],
      "index": "index.html",
      "main": "main.js",
      "polyfills": "polyfills.js",
      "prefix": "",
      "styles": [
        "styles.scss"
      ],
      "scripts": [],
      "environments": {
        "source": "environments/environment.js",
        "dev": "environments/environment.js",
        "prod": "environments/environment.prod.js"
      }
    }
  ],
  "lint": [
    {
      "files": "src/**/*.js",
      "project": "src/tsconfig.json"
    },
    {
      "files": "e2e/**/*.js",
      "project": "e2e/tsconfig.json"
    }
  ],
  "defaults": {
    "styleExt": "scss",
    "prefixInterfaces": false,
    "inline": {
      "style": false,
      "template": false
    },
    "spec": {
      "class": false,
      "component": true,
      "directive": true,
      "module": false,
      "pipe": true,
      "service": true
    }
  }
}
